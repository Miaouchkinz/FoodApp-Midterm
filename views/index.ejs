<!DOCTYPE html>
<html lang="en">
  <head>
    <!-- Meta Information -->
    <title>Food App</title>

    <!-- External CSS -->
    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Bungee|Righteous|Source+Sans+Pro&display=swap" rel="stylesheet">
    <script src="https://kit.fontawesome.com/6ba3f5c144.js" crossorigin="anonymous"></script>

    <!-- Vendor JS -->
    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">

  </head>

  <body>
  <header>
    <nav>

      <div>
        <a href="/login/1">Login: Client #1</a>
      </div>

      <div class="restaurant-name">
        <img src="/images/dragon-orange5.png" alt="dragon">
        <span class="space-between"></span>
        <h2>Camilo<span>'s</span> Cafe</h2>
      </div>
      <div class="cart">
        <span id="cart-counter">0</span>
        <img src="/images/cart7.png" alt="Cart">
      </div>
    </nav>
  </header>
  <main>


    <!-- Temporary button for restaurnant views--> <!-- TOFIX-->
    <button type="button" class="btn btn-danger" id="render-restaurant-views">Render Restaurnant Views</button>
    <button type="button" class="btn btn-info" id="hide-restaurant-views">Toggle Restaurnant Views</button>
    <button type="button" class="btn btn-warning" id="upcoming-order-button">Up coming order</button>

    <!-- menu category container -->

    <section class="menu-category">
      <div class="conainer-lg">
        <div class="row">

          <div class="col-lg-3 sandwich" id="sandwich">
            <img src="/images/sandwich7.png" alt="sandwich">
            <p>sandwich</p>
          </div>
          <div class="col-lg-3" id="soup">
            <img src="/images/soup2.png" alt="soup">
            <p>soup</p>
          </div>
          <div class="col-lg-3" id="salad">
            <img src="/images/salad2.png" alt="salad">
            <p>salad</p>
          </div>
          <div class="col-lg-3" id="drinks">
            <img src="/images/drink2.png" alt="drink">
            <p>drink</p>
          </div>

        </div>
      </div>
    </section>

    <!-- meal-items-containers -->

    <section id="meal-items">

    </section>

    <section id="restaurant-views" class="restaurant-views-render">

    </section>

    <section>

    </section>
    <!-- place-order-container -->
    <section class="place-order">
        <div class="conainer-lg">
            <div class="row place-order-row">
                <div class="col-lg-12">
                    <div class="conainer-lg">
                      <div class="row nested-place-order-row">

                          <div class="col-lg-7 total-price">
                            <div class="conainer-lg">
                            </div>
                            <p>
                              Sub-total = $<span class="sub-total-cost">0</span>
                            </p>
                            <p>
                              Tip = $<span class="total-tip">0</span>
                            </p>
                            <p>
                              Total = $<span class="total-cost">0</span>
                            </p>
                          </div>
                          <div class="col-lg-2">
                              <p>

                              </p>
                          </div>
                          <div class="col-lg-3 place-order">
                            <button type="button" id="place-order" class="btn btn btn-success btn-lg"> Place Order </button>
                          </div>
                      </div>

                      <div class="row nested-tip-row">
                          <div class="col-lg-2 tip">Add Tip: </div>
                          <button type="button" class="btn btn-outline-info col-lg-1 10-tip">10%</button>
                          <button type="button" class="btn btn-outline-info col-lg-1 15-tip">15%</button>
                          <button type="button" class="btn btn-outline-info col-lg-1 20-tip">20%</button>
                          <button type="button" class="btn btn-outline-info col-lg-1 25-tip">25%</button>
                          <div class="col-lg-5"></div>

                      </div>

                    </div>
                </div>
            </div>
        </div>

    </section>

    <!-- new-order -->


    <!-- pick-up -->



    <!-- upcoming-order -->
    <section id="upcoming-order"></section>

    <!-- waiting-->
    <section class="waiting">
      <div class="conainer-lg">
        <div class="row waiting-row">
          <div class="col">
            <img src="/images/step-bar5.png" alt="step-bar">
          </div>
          <div class="w-100"></div>
          <div class="col-lg-1 my-auto"></div>
          <div class="col-lg-1 my-auto"></div>

          <div class="col-lg-2 my-auto">Choose your foods</div>
          <div class="col-lg-1 my-auto"></div>

          <div class="col-lg-2 my-auto">Order complete</div>
          <div class="col-lg-1 my-auto"></div>
          <div class="col-lg-2 my-auto">Ready for pickup</div>

          <div class="col-lg-1 my-auto"></div>
          <div class="col-lg-1 my-auto"></div>
        </div>
      </div>
      <br>
      <br>
      <br>


      <div class="conainer-lg">
        <div class="row waiting-row">
          <div class="col-lg-3 my-auto"></div>
          <div class="col-lg-6 my-auto">
            <img src="/images/Catering3.png" alt="step-bar">
            <div id="waitingOrderNumber"></div>

          </div>
          <div class="col-lg-3 my-auto"></div>
        </div>
      </div>

    </section>
  </main>

  <!-- <script type="text/javascript" src="/scripts/menuCategory.js"></script> -->
  <script type="text/javascript" src="/scripts/restaurantViewsRender.js"></script>
  <script type="text/javascript" src="/scripts/readyForPickUp.js"></script>

  <script type="text/javascript" src="/scripts/upComingOrder.js"></script>
   <!-- App JS -->
   <script type="text/javascript" src="/scripts/cartItems.js"></script>
   <script type="text/javascript" src="/scripts/menuItems.js"></script>
   <script type="text/javascript" src="/scripts/addToCart.js"></script>
   <script type="text/javascript" src="/scripts/app.js"></script>

  </body>
</html>
